- if @story.errors.any?
  :plain
    /*Hide the flash notice div*/
    $("#flash_notice").hide(300);

    /*Update the html of the div story_errors with the new one*/
    $("#story_errors").html("#{escape_javascript(error_messages_for(@story))}");

    /*Show the div story_errors*/
    $("#story_errors").show(300);
- else
  :plain
    /*Hide the div story_errors*/
    $("#story_errors").hide(300);

    /*Update the html of the div flash_notice with the new one*/
    $("#flash_notice").html("#{escape_javascript(flash[:notice])}");

    /*Show the flash_notice div*/
    $("#flash_notice").show(300);

    /*Clear the entire form*/
    $(":input:not(input[type=submit])").val("");

    /*Replace the html of the div story_lists with the updated new one*/
    $("#stories_list").html("#{escape_javascript( render(:partial => "stories_list") )}");
    
    /*Replace the html of the div story_details with the updated new one*/
    $("#story_details").html("#{escape_javascript( render(:partial => "view") )}");
